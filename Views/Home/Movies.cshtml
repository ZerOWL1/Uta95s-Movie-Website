
@{
    ViewData["Title"] = "Movies";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@model Episode
<div class="films-container">
    <div class="films-left">
        <div class="movie-title">
            <span>@Model._Title</span>
        </div>
        <div class="movie-video">
            <div class="uta-video">
                <iframe class="yt-frame" width="100%" height="100%"
                        src="https://short.ink/@Model._Episode_link" allowfullscreen>
                </iframe>
            </div>
        </div>
        <div class="movie-episode">
            <div class="row-pricing episode-content" style="margin: 0;">
                @foreach (var item in ViewBag.listEpMovie)
                {
                    <a asp-route="films" asp-route-id="@item._Mid" asp-route-val="@item._Episode" title="episode" class="col-card-0 col-c-md-0 col-c-sm-0 episode">@item._Episode</a>
                }
            </div>
        </div>
        <div class="movie-slider">
        <div class="section_last movie_last">
            <div class="sec_last_container">
                <div class="movie_title">
                    <i class='bx bxs-videos bx-flashing'></i>
                    <span>Recently update</span>
                </div>
                <div class="movie-player-slide carousel-nav-center owl-carousel">
                    <!--1-->
                    @foreach (var item in ViewBag.MoviesLatestUpdate)
                    {
                        <a asp-route="details" asp-route-id="@item.MID" class="movie-item">
                            <img src="data:image/png;base64,@item.MIMG64" alt="">
                            <div class="movie-item-content">
                                <div class="movie-item-title">
                                    @item.Title
                                </div>
                                <div class="movie-infos">
                                    <div class="movie-info">
                                        <i class="bx bxs-star"></i>
                                        <span>9.5</span>
                                    </div>
                                    <div class="movie-info">
                                        <i class="bx bxs-time"></i>
                                        <span>@item.Length mins</span>
                                    </div>
                                    <div class="movie-info">
                                        <span>@item.Status</span>
                                    </div>
                                    <div class="movie-info">
                                        <span>10+</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
        </div>
        <div class="movie-facebook-cmt">
            <div class="fb-cmt-title">Feel free to share us your opinion.</div>
            <div class="fb-comment-movie">
                <div id="fb-root"></div>
                <div class="fb-comments"
                     data-href="https://localhost:44309/films/@Model._Episode_link"
                     data-width="100px" data-numposts="100"
                     data-mobile="true"></div>
            </div>
        </div>
    </div>
<div class="films-right">
    <div class="films-right-title">
        <span>Lastest Updates</span>
    </div>
    <!--1-->
    @foreach (var item in ViewBag.list4LatestUpdate)
    {
        <a asp-route="details" asp-route-id="@item.MID" class="movie-item films-right-item">
            <img src="data:image/png;base64,@item.MIMG64" alt="">
            <div class="movie-item-content">
                <div class="movie-item-title">
                    @item.Title
                </div>
                <div class="movie-infos">
                    <div class="movie-info">
                        <i class="bx bxs-star"></i>
                        <span>9.5</span>
                    </div>
                    <div class="movie-info">
                        <i class="bx bxs-time"></i>
                        <span>@item.Length mins</span>
                    </div>
                    <div class="movie-info">
                        <span>@item.Status</span>
                    </div>
                    <div class="movie-info">
                        <span>10+</span>
                    </div>
                </div>
            </div>
        </a>
    }
</div>
</div>


