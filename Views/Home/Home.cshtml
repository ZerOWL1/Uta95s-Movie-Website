@model  Uta95s_Movie_Web___BETA_0._1.Models.Entity.Child.MBase64;
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@*1st update*@
<div class="big-image-container">
    @*replace big img here*@
    <div class="content" style=" background: url(data:image/png;base64,@Model.MIMG_BGbyte);
        background-position: center;
        background-size: cover;
">
        <div class="left-content">
            <h2>@Model.Title <span></span></h2>
            <p>
               @Model.Desc
            </p>
            <a href="#" class="play-video">
                <img src="~/sources/icon/video/play.png" />
                <span>Watch Trailer</span>
            </a>
        </div>
        <div class="right-content slide" style="background: url(data:image/png;base64,@Model.MIMG64); background-size: cover;">
        </div>
    </div>
</div>
<div class="trailer" id="trailer-video">
    <iframe allowfullscreen src="https://www.youtube.com/embed/VQGCKyvzIM4"></iframe>
    <img class="close-trailer" src="~/sources/icon/video/close.png" />
</div>

@*top 7 random slider*@
<div class="top3_random">
    <div class="movie_title">
        <i class='bx bx-movie-play bx-tada'></i>
        <span>your movie today</span>
    </div>
    <div class="owl-carousel" id="top3_random_slide">

        @{
            foreach (var item in ViewBag.Movies6)
            {
                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Mid" class="movie-item">
                    <img src="data:image/png;base64,@item.MIMG64" alt="">
                    <div class="movie-item-content">
                        <div class="movie-item-title">
                            @item.Title
                        </div>
                        <div class="movie-infos">
                            <div class="movie-info">
                                <i class="bx bxs-star"></i>
                                <span>9.5</span>
                            </div>
                            <div class="movie-info">
                                <i class="bx bxs-time"></i>
                                <span>@item.Length mins</span>
                            </div>
                            <div class="movie-info">
                                <span>HD</span>
                            </div>
                            <div class="movie-info">
                                <span>10+</span>
                            </div>
                        </div>
                    </div>
                </a>
            }
        }
    </div>
</div>


