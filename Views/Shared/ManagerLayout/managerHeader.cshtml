
@{
    //Layout = null;
}
<div id="layoutSidenav_nav">
    <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
            <div class="nav">
                <div class="sb-sidenav-menu-heading">Main</div>
                <a class="nav-link active" asp-route="manager">
                    <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                    Dashboard
                </a>
                <div class="sb-sidenav-menu-heading">Interface</div>
                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseControl">
                    <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                    Control
                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                </a>
                <div class="collapse" id="collapseControl" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                    <nav class="sb-sidenav-menu-nested nav">
                        <a class="nav-link nav-li" asp-route="UManager">User</a>
                    </nav>
                </div>
                @*collapsed 2*@
                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseManage">
                    <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                    Management
                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                </a>
                <div class="collapse" id="collapseManage" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                    <nav class="sb-sidenav-menu-nested nav">
                        <a class="nav-link nav-li" asp-route="MManager">Movie</a>
                        <a class="nav-link nav-li" asp-route="EManager">Episode</a>
                        <a class="nav-link nav-li" asp-route="AManager">Actor</a>
                        <a class="nav-link nav-li" asp-route="DManager">Director</a>
                        <a class="nav-link nav-li" asp-route="GManager">Genre</a>
                    </nav>
                </div>
                @if (ViewBag.user != null)
                {
                    @if (ViewBag.user.Role == 1 || ViewBag.user.Role == 2)
                    {
                        <div class="sb-sidenav-menu-heading">Others</div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseMovieControl">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                            Movie Control
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseMovieControl" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link nav-li" asp-route="MActor">Movie Actor</a>
                                <a class="nav-link nav-li" asp-route="MDirector">Movie Director</a>
                                <a class="nav-link nav-li" asp-route="MGenre">Movie Genre</a>
                            </nav>
                        </div>
                    }else{
                        <span>SIGN IN PLEASE</span>
                    }
                }
                else
                {
                    <span>SIGN IN PLEASE</span>
                }
            </div>
        </div>
        <div class="sb-sidenav-footer">
            <div class="small">Logged in as:</div>
            @if (ViewBag.user != null)
            {
                @if (ViewBag.user.Role == 1 || ViewBag.user.Role == 2)
                {
                    @ViewBag.user.Name
                }
                else
                {
                    <span>SIGN IN PLEASE</span>
                }
            }
            else
            {
                <span>SIGN IN PLEASE</span>
            }
            <img alt="" src=""/>
        </div>
    </nav>
</div>
