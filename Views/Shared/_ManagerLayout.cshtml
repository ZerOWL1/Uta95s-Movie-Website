
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - UTA95S Administration</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="~/css/managerSite.css" rel="stylesheet" />
    <link href="~/css/grid.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <link rel="icon" type="image/png" href="~/sources/icon/logo_home2.png">
</head>
<body class="sb-nav-fixed">
<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
    <a class="navbar-brand ps-3" href="#">Welcome
        @if (ViewBag.user != null)
        {
            @if (ViewBag.user.Role == 1 || ViewBag.user.Role == 2)
            {
                @ViewBag.user.Name
            }
            else
            {
                <span>SIGN IN PLEASE</span>
            }
        }
        else
        {
            <span>SIGN IN PLEASE</span>
        }
    </a>
    @*slider toggle*@
    <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
    @*upcoming search*@
    <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
        <div class="input-group" hidden="">
            <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch"/>
            <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
        </div>
    </form>
    @*dropdown*@
    @if (ViewBag.user != null)
    {
        @if (ViewBag.user.Role == 1 || ViewBag.user.Role == 2)
        {
            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-manager" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" asp-route="profile">Profile</a></li>
                        <li><a class="dropdown-item" href="https://abyss.to/">Abyss</a></li>
                        <li><a class="dropdown-item" href="https://developers.facebook.com/tools/comments/">FB Management</a></li>
                        <li><hr class="dropdown-divider"/></li>
                        <li><a class="dropdown-item logout-btn" asp-route="logout">Logout</a></li>
                    </ul>
                </li>
            </ul>
        }
        else
        {
            <span>SIGN IN PLEASE</span>
        }
    }
    else
    {
        <span>SIGN IN PLEASE</span>
    }
</nav>
<div id="layoutSidenav">
    <partial name="ManagerLayout/managerHeader"/>
    <div id="layoutSidenav_content">
        <main>
            @RenderBody()
        </main>
        <partial name="ManagerLayout/managerFooter"/>
    </div>
</div>
<script src="~/lib/download/jqueryV3/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/js/manager.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
<script src="assets/demo/chart-area-demo.js"></script>
<script src="assets/demo/chart-bar-demo.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="~/js/datatables-simple-demo.js"></script>
<script>
    $(".logout-btn").click(function() {
        var x = confirm("Are you sure you want to log out?");
        if (x)
            return true;
        else
            return false;
    });

    $(".delete-btn").click(function() {
        var confirmDel = confirm("Do you want to delete?");
        if (confirmDel)
            return true;
        else
            return false;
    });
</script>
    @if (ViewBag.Mess != null)
    {
        if (ViewBag.Mess != String.Empty)
        {
            <script>
                window.onload = function() {
                    alert("@ViewBag.Mess");
                };
            </script>
        }
    }
</body>
</html>
