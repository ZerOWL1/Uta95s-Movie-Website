                                    <label>Actor Name</label>
                                    <input type="text" class="form-control movie-form-input" name="acName" title="" value="@ViewBag.actor.ActorName"/>
                                </div>
                                <div class="actorWiki-bx mv-bx">
                                    <label>Actor Wiki</label>
                                    <input type="text" class="form-control movie-form-input" name="acWiki" title="" value="@ViewBag.actor.ActorWiki"/>
                                </div>
                                <div class="submit-btn">
                                    <input type="submit" value="UPDATE"/>
                                </div>
                            </form>
                        </div>
                    </nav>
                </div>
                <div class="col-card-6 col-c-sm-12 umanager-col">
