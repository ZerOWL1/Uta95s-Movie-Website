                <div class="col-card-6 col-c-sm-12 umanager-col">
                    <nav class="sb-sidenav-menu-nested nav">
                        <div class="add-movie">
                            @*Edit actor*@
                            <form asp-route="EditA" class="add-movie-form" enctype="" method="post">
