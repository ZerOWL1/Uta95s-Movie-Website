
@{
    ViewData["Title"] = "EditActor";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="add-container" style="margin: 30px 15px 20px;">
    <div class="umanager-head">
        <span>Edit Actor</span>
    </div>
